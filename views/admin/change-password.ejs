    <%- include('./includes/head.ejs') %>

    </head>
    <body>
        <!-- Header -->
        <%- include('./includes/nav.ejs') %>
        <!-- Header Ends -->

        <!-- Change Password -->
        <section id="change-password">
            <div class="jumbotron bg-light">
                <div class="container-md py-2 py-sm-2 py-md-3 py-lg-4 py-xl-5">
                    <div class="row gutters">
                        <div class="col-12 col-md-5">
                            <h2 class="h2 display-6">Change Password</h2>
                        </div>
                        <div class="col-12 col-md-7">
                            <div id="alert" class="alert py-1 py-sm-1" role="alert" hidden>
                                <div class="muted-text"></div>
                                <i id="close-alert" class="far fa-times-circle"></i>
                            </div>
                        </div>
                    </div>
                    <hr class="my-sm-2 my-md-3 my-lg-4">
                    <div class="row gx-4 gy-3">
                        <div class="col-12 col-md-6">
                            <form id="change-password-form">
                                <div class="row gx-4 gy-3">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="password">Password</label>
                                            <input 
                                                type="password" 
                                                name="password" 
                                                id="password" 
                                                class="form-control py-1" 
                                                placeholder="Old Password&mldr;">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="new_password">New Password</label>
                                            <input 
                                                type="password" 
                                                name="new_password" 
                                                id="new_password" 
                                                class="form-control py-1" 
                                                placeholder="New Password&mldr;">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="confirm_password">Confirm Password</label>
                                            <input 
                                                type="password" 
                                                name="confirm_password" 
                                                id="confirm_password" 
                                                class="form-control py-1" 
                                                placeholder="Confirm Password&mldr;">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <button type="submit" id="change-password-btn" class="btn btn-primary py-1">Change</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Change Password Ends -->

        <!-- Change Password Custom JS -->
        <script src="/scripts/admin/change-password.script.js"></script>

        <!-- Footer -->
        <%- include('./includes/footer.ejs') %>
        <!-- Footer Ends -->
    </body>
</html>

