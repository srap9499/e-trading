    <%- include('./includes/head.ejs') %>

    </head>

    <body>
        <!-- Header -->
        <%- include('./includes/nav.ejs') %>
        <!-- Header Ends -->

        <!-- Add Sub Admin -->
        <section id="add-sub-admin">
            <div class="jumbotron bg-light">
                <div class="container-md py-2 py-sm-2 py-md-3 py-lg-4 py-xl-5">
                    <div class="row gutters">
                        <div class="col-12 col-sm-12 col-md-5">
                            <h2 class="h2 display-6">
                                Add Sub Admin
                            </h2>
                        </div>
                        <div class="col-12 col-sm-12 col-md-7">
                            <div id="alert" class="alert alert-success py-1 py-sm-1 py-md-2 py-lg-2" role="alert" hidden>
                                <div class="text-muted d-inline-flex"></div>
                                <i class="far fa-times-circle me-right"></i>
                            </div>
                        </div>
                    </div>
                    <hr class="my-sm-2 my-md-3 my-lg-4">
                    <div id="add--sub-admin-area">
                        <form>
                            <div class="row gx-5 gy-4">
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <label for="userName" class="text-muted">User Name</label>
                                        <input type="text" name="userName" id="userName" class="form-control" placeholder="Enter User Name&mldr;">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <label for="email" class="text-muted">Email Address</label>
                                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email Address&mldr;">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <label for="password" class="text-muted">Password</label>
                                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password&mldr;">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <label for="confirm_password" class="text-muted">Confirm Password</label>
                                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Confirm Password&mldr;">
                                    </div>
                                </div>
                                <div class="col-6 col-sm-6 col-md-3">
                                    <div class="form-group">
                                        <button type="button" id="add-sub-admin-btn" class="btn btn-primary btn-sm form-control">Add</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- Add Sub Admin Ends -->

        <!-- Add Sub Admin Custom JS -->
        <script src="/scripts/admin/add-sub-admin.script.js"></script>

        <!-- Footer -->
        <%- include('./includes/footer.ejs') %>
        <!-- Footer Ends -->
    </body>
</html>