<%- include('./includes/head.ejs') %>

</head>
<body>
    <%- include('./includes/nav.ejs') %>
        
    <section id="orders-list">
        <div class="content-box-md">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="left-heading">
                            <h2>Order History</h2>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="product-desc">
                            <h4>Total <%= totalItems %> orders in history!</h4>
                        </div>
                    </div>
                    <% if (!orders.length) { %>
                        <div class="col-sm-12 col-md-12 justify-content-center">
                            <p>Nothing to display here...</p>
                        </div>
                    <% } else { %>
                        <div class="col-12 col-sm-12 col-md-12 grid-table table-responsive-xl">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="align-middle text-center">Order<br>ID</th>
                                        <th scope="col" class="align-middle text-center">DATE</th>
                                        <th scope="col" class="align-middle text-center">Details</th>
                                        <th scope="col" class="align-middle text-center">Price(Rs)</th>
                                        <th scope="col" class="align-middle text-center">Quantity</th>
                                        <th scope="col" class="align-middle text-center">Total(Rs)</th>
                                        <th scope="col" class="align-middle text-center">Grand<br>Total(Rs)</th>
                                        <th scope="col" class="align-middle text-center">Status</th>
                                        <th scope="col" class="align-middle text-center">Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (const item of orders) { %>
                                        <tr>
                                            <td class="align-middle" ><%= item.id %></td>
                                            <td class="align-middle" style="max-width: 85px;"><%= item.date.getDate()+'/'+(item.date.getMonth()+1)+'/'+item.date.getFullYear() %></td>
                                            <td class="align-middle" style="min-width: 220px;"><% for (const detail of item.orderdetails) { %><p style="display: table-row-group;">- <%= detail.product.name %></p><% } %></td>
                                            <td class="align-middle" ><% for (const detail of item.orderdetails) { %><p style="display: table-row-group;"><%= detail.product.price %></p><% } %></td>
                                            <td class="align-middle" ><% for (const detail of item.orderdetails) { %><p style="display: table-row-group;"><%= detail.quantity %></p><% } %></td>
                                            <td class="align-middle" ><% for (const detail of item.orderdetails) { %><p style="display: table-row-group;"><%= detail.total %></p><% } %></td>
                                            <td class="align-middle" ><%= item.discountedAmount %></td>
                                            <td class="align-middle" style="max-width: 70px;"><a type="button" href="/cart/checkout/<%= item.id %>/status" class="<%= item.status ==='success' ? 'green' : item.status==='pending' ? 'blue' : 'red' %>" aria-label="view details & options"><%= item.status %></a></td>
                                            <td class="align-middle" style="max-width: 140px;"><%= item.remark %></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <% if (totalPages > 0) { %>
            <nav aria-label="Cart Pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link"
                            href="/user/orderhistory/?size=<%= size%>&page=<%= (currentPage>0) ? (currentPage-1) : 0 %>"
                            aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <% for (let pageNum=0; pageNum<totalPages; pageNum++) { %>
                        <li class="page-item <%= currentPage==pageNum ? 'active' : '' %>"><a
                                class="page-link"
                                href="/user/orderhistory/?size=<%= size%>&page=<%= pageNum%>">
                                <%= pageNum+1 %>
                            </a></li>
                    <% } %>
                    <li class="page-item">
                        <a class="page-link"
                            href="/user/orderhistory/?size=<%= size%>&page=<%= (currentPage < totalPages-1) ? (currentPage+1) : (totalPages-1) %>"
                            aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        <% } %>
    </section>
    
    <%- include('./includes/tail.ejs') %>