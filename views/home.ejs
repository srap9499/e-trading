    <%- include('./includes/head.ejs') %>

    </head>
    <body>
        <h2><a href="">Welcome <%= user.userName %></a></h2>

        <div class="container">
            <% if(!products.length) { %>
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-12">
                        <p>No Products Available!</p>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <div class="col-sm-6 col-md-6">
                        <h3>Products</h3>
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <div class="grid-table">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="allign-middle">Product ID</th>
                                        <th scope="col" class="allign-middle">Product Name</th>
                                        <th scope="col" class="allign-middle">Quantity</th>
                                        <th scope="col" class="allign-middle">Price (Rs.)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let product of products) { %>
                                        <tr>
                                            <td class="align-middle"><%= product.id %></td>
                                            <td class="align-middle"><%= product.name %></td>
                                            <td class="align-middle"><%= product.quantity %></td>
                                            <td class="align-middle"><%= product.price %></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        
        <%- include('./includes/tail.ejs') %>