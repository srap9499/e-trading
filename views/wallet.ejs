<%- include('./includes/head.ejs') %>

    </head>

    <body>
        <%- include('./includes/nav.ejs') %>
        
        <section id="my-wallet">
            <div class="content-box-md-2">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="left-heading">
                                <h2>My Wallet</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="display-amount">
                                <label for="display-amount">Wallet Amount (&#8377;):</label>
                                <input type="text" id="display-amount" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="add-to-wallet">
            <div class="content-box-md">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="left-heading">
                                <h3>Add Amount</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6">
                            <div id="alert" class="alert" role="alert" hidden>
                            </div>
                            <div class="row">
                                <div class="form-group col-6 col-sm-6 col-md-6">
                                    <input type="text" id="amount" name="amount" class="form-control" placeholder="Amount (&#8377;)" required>
                                </div>
                                <div id="button" class="col-6 col-sm-6 col-md-6 form-group">
                                    <button type="button" id="add-amount" class="btn btn-add-amount btn-block">ADD</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('./includes/tail.ejs') %>
        <script src="/scripts/wallet.script.js"></script>
    </body>
</html>